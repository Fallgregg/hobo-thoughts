{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"src/**/*.js\"",
    "fix": "eslint --fix \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.js\" \"**/*.json\""
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "ws": "3.3.2"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "http-status": "^1.5.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-cors": "0.0.16",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "mongo": "^0.1.0",
    "mongoose": "^5.12.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint \"src/**/*.js\" ",
      "prettier --write \"src/**/*.js\"",
      "git add"
    ],
    "*.json": [
      "eslint \"**/*.json\"",
      "prettier --write \"**/*.json\"",
      "git add"
    ]
  }
}
